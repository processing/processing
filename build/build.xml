	   src="windows/jre.tgz" 
	   overwrite="false" />
    <move file="windows/work/jre1.7.0_40" tofile="windows/work/java" />

    <!-- Remove space-wasting JavaFX garbage. -->
    <delete> 
      <fileset refid="javafx-basics" />
      <fileset refid="javafx-windows" />
      <fileset refid="jre-optional-windows" />
    </delete>
  </target>
  
