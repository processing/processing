    <antcall target="assemble">
      <param name="target.path" value="windows/work" />
    </antcall>

    <delete dir="${target.path}/modes/java/libraries/video/library/macosx32" />
    <delete dir="${target.path}/modes/java/libraries/video/library/macosx64" />
