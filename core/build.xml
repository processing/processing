<?xml version="1.0"?>
<project name="Processing Core" default="build">

  <target name="clean" description="Clean out the build directories">
    <delete dir="bin" />
    <delete file="core.jar" />
  </target>
  
  <target name="compile" description="Compile">
    <taskdef name="preproc" 
	     classname="processing.build.PAppletMethods" 
	     classpath="preproc/preproc.jar" />
    <preproc dir="${basedir}/src/processing/core" />

    <mkdir dir="bin" />
    <javac target="1.5" srcdir="src" destdir="bin"/>
  </target>		

  <target name="build" depends="compile" description="Build core library">
    <jar basedir="bin" destfile="core.jar" />
  </target>
  
</project>
