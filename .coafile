[default]
bears = FilenameBear
files = **.md, core/src/**.java, app/src/**.java, java/src/**.java
ignore = build/macosx/appbundler/README.md, java/libraries/pdf/README.md,
         java/libraries/svg/README.md
file_naming_convention = pascal

[markdown]
bears = MarkdownBear, LineLengthBear, SpaceConsistencyBear
files = **.md
max_line_length = 100
use_spaces = True

[xml]
bears = XMLBear
files = app/build.xml, core/build.xml, java/build.xml, build/build.xml,
        .checkstyle.xml

[java]
bears = CheckstyleBear
files = core/src/**.java, app/src/**.java, java/src/**.java
checkstyle_configs = .checkstyle.xml

[yaml]
bears = YAMLLintBear
files = .travis.yml
